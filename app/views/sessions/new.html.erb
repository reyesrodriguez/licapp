<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Please Log In</h1>
			<%=form_tag log_in_path do%>

			<h3><%=label_tag :name %></h3>

			<%=text_field_tag :name %>

			<h3><%=label_tag :password %></h3>

			<%=password_field_tag :password %>

			<h3><%=submit_tag "Log in" %></h3>

			<%end%>
		
		</div>
	</div>
</div>
