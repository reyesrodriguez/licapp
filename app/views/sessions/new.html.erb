<div class="container">
	<div class="row">
		<div class="col-md-6 ">
			<div class="wrapper">

				<%=form_tag log_in_path, class: 'form-log'  do%>
				<div class="wrapperheader">
				<h1>Login Form</h1>
				<span>Fill out the form below to login to my super awesome imaginary control panel.</span>
				</div>

				<div class="wrappercontent">
			
				<h2><%=label_tag :name %></h2>

				<%=text_field_tag :name, "" , class: 'input-fields' %>

				<h2><%=label_tag :password %></h2>

				<%=password_field_tag :password, "" , class: 'input-fields' %>
				</div> 

				<div class="wrapperfooter">
				<%=button_tag "Log in" %>


				</div> 
				<%end%>
			</div>
		</div>
	</div>
</div>
