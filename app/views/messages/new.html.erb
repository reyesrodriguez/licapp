<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">

      <div align="center">
        <h3>Contact Us!</h3>

        <%= simple_form_for @message, url: contact_path do |message_form| %>
        <%= message_form.input :name, :required => true, label: "Name" %>
        <%= message_form.input :email, :required => true, label: "Email" %>
        <%= message_form.input :content, :required => true, label: "Message" %>
      <div>
        <br>
        <%= message_form.button :submit, "Send Message", :class=> "btn btn-primary" %>
      </div>
      <% end %>
      <br>
    </div>

  </div>
</div>
</div>

